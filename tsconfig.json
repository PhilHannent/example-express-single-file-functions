{
	"exclude": [
		"js/**/*",
		"typings/*"
	],
	"include": [
		"src/**/*"
	],
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "./build",
		"rootDir": "src",
		"allowJs": true,
		"alwaysStrict": true,
		"target": "es2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"esModuleInterop": false,
		"sourceMap": false,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"src/global.d.ts",
			"node_modules/@types/"
		],
		"types": [
			"node"
		]
	},
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true
}